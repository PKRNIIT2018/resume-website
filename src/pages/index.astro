---
import BaseLayout from "../layouts/BaseLayout.astro";
import { resumeData } from "../data/resumeData";

// Helper to render markdown bolding in HTML
const formatBold = (text: string) =>
  text.replace(/\*\*(.*?)\*\*/g, "<strong>$1</strong>");
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Prasanth Kunnumal Ramesh, PMP® - Product Owner | Senior Technical Business Analyst"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">
            Hi, I'm <span class="highlight">{resumeData.personalInfo.name}</span
            >
          </h1>
          <p class="hero-subtitle">
            {resumeData.personalInfo.title} @ IBM | Agile Leader | {
              resumeData.hero.highlightLine
            }
          </p>
          <p
            class="hero-description"
            set:html={formatBold(resumeData.hero.description)}
          />
          <div class="hero-actions">
            <a href="/portfolio" class="btn btn-primary">View My Work</a>
            <a href="/contact" class="btn btn-secondary">Get In Touch</a>
          </div>
        </div>
      </div>
    </section>

    <!-- About Preview Section -->
    <section class="section about-preview">
      <div class="container">
        <div class="section-header">
          <h2>About Me</h2>
          <p class="section-description">
            A brief introduction to who I am and what I do
          </p>
        </div>
        <div class="about-content">
          <div class="about-text">
            <p set:html={formatBold(resumeData.executiveSummary)} />
            <p>
              My "secret sauce" is the integration of a self-initiated AI
              productivity stack, including <strong
                >watsonx Code Assistant</strong
              >,
              <strong>IBM BOB</strong>, <strong>Perplexity</strong> and
              <strong>Gemini</strong>. I leverage these tools to analyze complex
              logic and accelerate requirement drafting while maintaining strict
              enterprise standards.
            </p>
            <a href="/about" class="link-with-arrow">
              Learn more about me
              <span class="arrow">→</span>
            </a>
          </div>
          <div class="skills-preview">
            <h3>Core Skills</h3>
            <div class="skills-grid">
              {
                resumeData.skills
                  .flatMap((category) => category.items)
                  .map((skill) => <span class="badge">{skill}</span>)
              }
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Let's Work Together</h2>
          <p>
            I'm always interested in hearing about new projects and
            opportunities.
          </p>
          <div class="cta-actions">
            <a href="/contact" class="btn btn-outline-white">Get In Touch</a>
            <button id="downloadResumeBtn" class="btn btn-outline-white">
              Download Resume
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script>
    import { generateDynamicResumePDF } from "../utils/pdfGenerator";

    const downloadBtn = document.getElementById("downloadResumeBtn");
    if (downloadBtn) {
      downloadBtn.addEventListener("click", () => {
        generateDynamicResumePDF();
      });
    }
  </script>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-10) 0;
    background: linear-gradient(135deg, var(--surface) 0%, white 100%);
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    margin: 0 auto;
  }

  .hero-title {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-3);
    line-height: 1.2;
  }

  .highlight {
    background: linear-gradient(135deg, var(--primary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-2xl);
    color: var(--text-light);
    margin-bottom: var(--space-3);
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--text);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-5);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Section Styles */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-6);
  }

  .section-header h2 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-2);
  }

  .section-description {
    font-size: var(--text-lg);
    color: var(--text-light);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-footer {
    text-align: center;
    margin-top: var(--space-6);
  }

  /* About Preview */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
    align-items: start;
  }

  .about-text p {
    margin-bottom: var(--space-3);
    line-height: var(--leading-relaxed);
  }

  .skills-preview h3 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-3);
  }

  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  /* Link with Arrow */
  .link-with-arrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
    transition: gap var(--transition-fast);
  }

  .link-with-arrow:hover {
    gap: var(--space-2);
  }

  .arrow {
    transition: transform var(--transition-fast);
  }

  .link-with-arrow:hover .arrow {
    transform: translateX(4px);
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--primary), var(--accent));
    color: white;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    color: white;
    font-size: var(--text-4xl);
    margin-bottom: var(--space-3);
  }

  .cta-content p {
    font-size: var(--text-lg);
    margin-bottom: var(--space-5);
    opacity: 0.95;
  }

  .cta-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-actions .btn-outline-white {
    background-color: transparent;
    color: white;
    border: 2px solid white;
  }

  .cta-actions .btn-outline-white:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
  /* Responsive Design */

  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--text-4xl);
    }

    .hero-subtitle {
      font-size: var(--text-xl);
    }

    .about-content {
      grid-template-columns: 1fr;
    }

    .hero-actions,
    .cta-actions {
      flex-direction: column;
      width: 100%;
    }

    .hero-actions .btn,
    .cta-actions .btn {
      width: 100%;
    }
  }
</style>
